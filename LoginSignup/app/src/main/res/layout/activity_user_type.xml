<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="235dp"
        android:layout_height="195dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Thrive Logo"
        android:src="@drawable/thrive_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tagline Text -->
    <TextView
        android:id="@+id/empoweringText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empowering Abilities, Redefining Possibilities"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- CardView Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_looking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="30dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/empoweringText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Heading Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What are you looking for?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Options Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Job Seeker Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_job"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="20dp"
                    android:elevation="6dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_job"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_job"
                            android:contentDescription="Job Icon"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/btnJobSeeker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Looking for a job"
                            android:backgroundTint="@color/button_create"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Employer Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_employee"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="20dp"
                    android:elevation="6dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_employee"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_person"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/btnEmployer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Someone to hire"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/button_create"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
