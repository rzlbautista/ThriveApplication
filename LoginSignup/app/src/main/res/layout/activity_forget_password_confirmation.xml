<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_blue"
    tools:context=".ResetLinkSentActivity">

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="166dp"
        android:layout_height="167dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/thrive_logo"
        app:layout_constraintBottom_toTopOf="@+id/resetText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Link Sent!"
        android:textSize="24sp"
        android:textColor="@color/button_color"
        android:textStyle="bold"
        android:fontFamily="@font/paytone_one"
        app:layout_constraintTop_toBottomOf="@+id/checkIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/confirmationMessage"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Please check your email for a password reset link. It may take a few minutes to arrive."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/zen_kaku_gothic_new_medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/resetText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/backToLoginButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Back to Login"
        android:textColor="@color/white"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/zen_kaku_gothic_new_medium"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmationMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
