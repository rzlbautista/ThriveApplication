<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_blue">

    <Button
        android:id="@+id/Loginbutton"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignInGoogleButton" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="10dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="Password"
        android:padding="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PWDusername" />

    <EditText
        android:id="@+id/PWDusername"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:textStyle="bold"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="156dp"
        android:text="Log In"
        android:fontFamily="@font/paytoneone"
        android:textColor="@color/button_color"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="64dp"
        android:textStyle="bold"
        android:text="Forgot Password?"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/zenkakugothicnew_medium"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Or"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassword" />

    <Button
        android:id="@+id/SignInGoogleButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/google"
        android:text="Sign in with Google"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:enabled="true"
        android:fontFamily="@font/zenkakugothicnew_medium"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CreateAccountButton"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/button_create"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:text="Create your account"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Loginbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>
