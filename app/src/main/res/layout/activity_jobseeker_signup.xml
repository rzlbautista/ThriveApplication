<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <Button
        android:id="@+id/GoogleSignup"
        android:layout_width="310dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/google"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:text="Sign Up with Google"
        android:textColor="@color/black"
        android:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="310dp"
        android:layout_height="59dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/button_color"
        android:text="Create Account"

        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoogleSignup" />

    <EditText
        android:id="@+id/jobseeker_firstname"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/user_circle"
        android:drawablePadding="10dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="First Name"
        android:padding="14dp"

        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JobseekerCreateAccount" />

    <EditText
        android:id="@+id/jobseeker_lastname"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/user_circle"
        android:drawablePadding="10dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="Last Name"
        android:padding="14dp"

        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobseeker_firstname" />

    <EditText
        android:id="@+id/jobseeker_username"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="Username"
        android:padding="14dp"

        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobseeker_lastname" />

    <EditText
        android:id="@+id/jobseeker_email"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="Email"
        android:padding="15dp"

        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobseeker_username" />

    <EditText
        android:id="@+id/jobseeker_password"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_border"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="7dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:hint="Password"
        android:padding="15dp"

        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobseeker_email" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/zenkakugothicnew_medium"
        android:text="By checking the box, you accept the Terms of User and Privacy Policy."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobseeker_password" />

    <TextView
        android:id="@+id/JobseekerCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/paytoneone"
        android:text="Create Account"
        android:textColor="@color/button_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/jobseeker_firstname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="310dp"
        android:layout_height="59dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/button_create"
        android:text="Login"


        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

</androidx.constraintlayout.widget.ConstraintLayout>